<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>

<StackPane xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.comp2042.MenuController"
    prefWidth="600" prefHeight="700"
    style="-fx-background: linear-gradient(to bottom, #1a1a2e 0%, #0f3460 50%, #16213e 100%); -fx-padding: 0;">

    <!-- Main Menu Container -->
    <VBox alignment="TOP_CENTER" spacing="0" style="-fx-padding: 60 20 40 20;">

        <!-- Title Section with Subtle Glow Effect -->
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 30;">
            <Text text="TETRIS" fx:id="titleText"
                style="-fx-font-size: 72px; -fx-font-weight: bold; -fx-fill: #00ff41; -fx-font-family: 'Courier New'; -fx-effect: dropshadow(three-pass-box, #00ff41, 8, 0.5, 0, 0); -fx-text-alignment: center;" />
        </VBox>

        <!-- Spacer -->
        <Region VBox.vgrow="ALWAYS" />

        <!-- Button Container with Better Styling -->
        <VBox spacing="18" alignment="CENTER" style="-fx-padding: 40 30;">

            <!-- Play Button -->
            <Button text="▶ PLAY GAME" fx:id="playButton"
                style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 16 60; -fx-font-family: 'Courier New'; 
                           -fx-background-color: linear-gradient(to bottom, #ff6b35, #ee5a6f); 
                           -fx-text-fill: white; -fx-border-radius: 8; -fx-background-radius: 8; 
                           -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.5), 10, 0, 0, 5);
                           -fx-cursor: hand;"
                prefWidth="280" prefHeight="50" />

            <!-- Difficulty Level Button -->
            <Button text="LEVEL 1" fx:id="levelButton"
                style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 16 60; -fx-font-family: 'Courier New'; 
                           -fx-background-color: linear-gradient(to bottom, #ffd700, #ffaa00); 
                           -fx-text-fill: #333333; -fx-border-radius: 8; -fx-background-radius: 8; 
                           -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.5), 10, 0, 0, 5);
                           -fx-cursor: hand;"
                prefWidth="280" prefHeight="50" />

            <!-- Controls Button -->
            <Button text="⌨ CONTROLS" fx:id="controlsButton"
                style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 16 60; -fx-font-family: 'Courier New'; 
                           -fx-background-color: linear-gradient(to bottom, #00d4ff, #0099cc); 
                           -fx-text-fill: white; -fx-border-radius: 8; -fx-background-radius: 8; 
                           -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.5), 10, 0, 0, 5);
                           -fx-cursor: hand;"
                prefWidth="280" prefHeight="50" />

            <!-- Exit Button -->
            <Button text="✕ EXIT" fx:id="exitButton"
                style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 16 60; -fx-font-family: 'Courier New'; 
                           -fx-background-color: linear-gradient(to bottom, #666666, #444444); 
                           -fx-text-fill: white; -fx-border-radius: 8; -fx-background-radius: 8; 
                           -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.5), 10, 0, 0, 5);
                           -fx-cursor: hand;"
                prefWidth="280" prefHeight="50" />
        </VBox>

        <!-- Footer Info -->
        <VBox alignment="BOTTOM_CENTER" spacing="10" style="-fx-padding: 20;">
            <Text text="Press any button to begin"
                style="-fx-font-size: 12px; -fx-fill: #00ff41; -fx-font-family: 'Courier New'; -fx-opacity: 0.6; -fx-text-alignment: center;" />
        </VBox>
    </VBox>

</StackPane>