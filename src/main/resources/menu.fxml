<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.comp2042.MenuController"
           prefWidth="400" prefHeight="500">

    <!-- Background image -->
    <ImageView fx:id = "BackgroundImage" fitWidth="400" fitHeight="500" preserveRatio="false">
    </ImageView>

    <!-- Semi-transparent overlay for better text readability (optional) -->
    <Pane style="-fx-background-color: rgba(0, 0, 0, 0.3);" />

    <!-- Menu layout -->
    <VBox spacing="20" alignment="CENTER">
        <Text text="TETRIS" style="-fx-font-size: 40px; -fx-fill: white; -fx-font-weight: bold; -fx-stroke: darkblue; -fx-stroke-width: 2;"/>

        <Button text="Play" fx:id="playButton" style="-fx-font-size: 16px; -fx-padding: 8 20;"/>
        <Button text="Controls" fx:id="controlsButton" style="-fx-font-size: 16px; -fx-padding: 8 20;"/>
        <Button text="Exit" fx:id="exitButton" style="-fx-font-size: 16px; -fx-padding: 8 20;"/>
    </VBox>

</StackPane>
