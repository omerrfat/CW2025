<?xml version="1.0" encoding="UTF-8"?>

<?import com.comp2042.GameOverPanel?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<AnchorPane fx:controller="com.comp2042.GuiController"
    xmlns:fx="http://javafx.com/fxml"
    prefWidth="600" prefHeight="600"
    style="-fx-background-color: #222222;">

    <!-- LEFT SIDE PANEL (HOLD) -->
    <VBox layoutX="10" layoutY="45" spacing="6">
        <!-- HOLD SECTION -->
        <VBox spacing="4" alignment="CENTER">
            <Label text="Hold" styleClass="nextBrickLabel" />
            <Pane styleClass="previewBox" prefWidth="100" prefHeight="110">
                <GridPane fx:id="holdPreview" vgap="1" hgap="1" prefHeight="100" prefWidth="100"
                    layoutX="0" layoutY="5" alignment="CENTER" />
            </Pane>
        </VBox>
    </VBox>

    <Pane prefWidth="420" prefHeight="510" style="-fx-background-color: transparent;"
        AnchorPane.topAnchor="45" AnchorPane.leftAnchor="130" AnchorPane.rightAnchor="50"
        AnchorPane.bottomAnchor="45">

        <!-- CURRENT BRICK PANEL (for active piece) -->
        <GridPane fx:id="brickPanel" vgap="1" hgap="1"
            layoutX="10" layoutY="0" />

        <!-- GAME BOARD -->
        <BorderPane styleClass="gameBoard" fx:id="gameBoard"
            layoutX="10" layoutY="10">
            <center>
                <GridPane fx:id="gamePanel" hgap="1" vgap="1"
                    layoutX="40" layoutY="30" />
            </center>
        </BorderPane>

        <!-- NOTIFICATIONS -->
        <Group fx:id="groupNotification" layoutX="14" layoutY="203">
            <VBox alignment="CENTER">
                <GameOverPanel fx:id="gameOverPanel" />
            </VBox>
        </Group>

        <!-- RIGHT SIDE PANEL -->
        <VBox layoutX="300" layoutY="32" spacing="6">
            <!-- SCORE SECTION -->
            <VBox spacing="1">
                <Label text="Score" styleClass="nextBrickLabel" />
                <Label fx:id="scoreLabel" text="0" styleClass="scoreClass" />
                <Label text="High Score" styleClass="nextBrickLabel" />
                <Label fx:id="highScoreLabel" text="0" styleClass="scoreClass" />
                <Group fx:id="scorePopupGroup" />
            </VBox>

            <!-- NEXT PIECE PREVIEW SECTION -->
            <VBox spacing="4" alignment="CENTER">
                <Label text="Next" styleClass="nextBrickLabel" />
                <Pane styleClass="previewBox" prefWidth="100" prefHeight="200">
                    <VBox fx:id="nextPreviewsBox" spacing="6" layoutX="10" layoutY="10"
                        prefWidth="100" prefHeight="200" alignment="CENTER">
                        <GridPane fx:id="nextPreview0" vgap="1" hgap="1" prefHeight="80"
                            prefWidth="80" />
                        <GridPane fx:id="nextPreview1" vgap="1" hgap="1" prefHeight="80"
                            prefWidth="80" />
                        <GridPane fx:id="nextPreview2" vgap="1" hgap="1" prefHeight="80"
                            prefWidth="80" />
                    </VBox>
                </Pane>
            </VBox>
        </VBox>
    </Pane>

    <stylesheets>
        <URL value="@window_style.css" />
    </stylesheets>

</AnchorPane>